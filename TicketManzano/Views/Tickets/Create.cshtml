@model TicketManzano.Models.Tickets
<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Creación Ticket de Atención</h5>

                    <!-- General Form Elements -->
                    <form>

                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="sebastianprovoste@gmail.com" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Asunto</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(model => model.AsuntoTickets, (SelectList)ViewBag.asunto, " Seleccione el asunto del ticket ", new { @class = "form-control", id = "asunto" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Prioridad</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(model => model.PrioridadTickets, (SelectList)ViewBag.prioridad, " Seleccione la prioridad del ticket ", new { @class = "form-control", id = "prioridad" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Descripción</label>
                            <div class="col-sm-10">
                                <textarea class="form-control"  style="height: 100px; resize: none;"></textarea>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Evidencia:</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="file" id="formFile">
                            </div>
                        </div>



                        <div class="text-center">
                            <input type="button" value="Guardar" id="guardar" class="btn btn-primary" />
                        </div>




                    </form><!-- End General Form Elements -->

                </div>
            </div>

        </div>


