
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sistema de Tickets - Constructora Manzano</title>
    <link href="~/Content/BootstrapLogin.css" rel="stylesheet" id="bootstrap-css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>





</head>
<body>
    <div>

        <!------ Include the above in your HEAD tag ---------->

        <div class="wrapper fadeInDown">
            <div id="formContent">
                <!-- Tabs Titles -->
                <!-- Icon -->

                <div class="fadeIn first">
                    <br />
                    <img src="https://www.cmanzano.cl/wp-content/uploads/2022/02/footer-02.png"    id="icon" alt="User Icon" />
                </div>

                <!-- Login Form -->
                <form action="@Url.Action("Login", "Usuario")" method="post">
                   
                    <input type="text" id="login" class="fadeIn second" name="email" placeholder="Login">
                    <input type="password" id="password" class="fadeIn third" name="pass" placeholder="Contraseña">
                    <input type="submit" class="fadeIn fourth" value="Ingresar">
                </form>

                <!-- Remind Passowrd -->


                <a href="">¿Olvidaste tu contraseña?</a>

            </div>
        </div>

    </div>
</body>
</html>

